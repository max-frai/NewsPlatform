{{ lined_title::generate(title='<img style="height: 16px; width: 16px;" src="/static/media/tags.svg">') }}
</div> #}

<div class="tagWrap mt-3">
    {% for tag in filled_tags %}
        {% include "modules/tag_item/tpl.tera" %}
    {% endfor %}
</div>